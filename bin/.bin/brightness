#!/usr/bin/env bash
# -*- mode:sh -*-

PERC=$(awk -F',' '{print $4}' <<<"$(brightnessctl -d amdgpu_bl0 -m)" | tr -d '%')
case $1 in
    get)
        echo $PERC%
        ;;
    up)
        brightnessctl set +5%
        ;;
    down)
        brightnessctl set 5%-
        ;;
    off)
        xset dpms force off
        ;;
    *)
        echo "Usage: $0 {get|up|down}"
        exit 1
        ;;
esac

PERC=$(awk -F',' '{print $4}' <<<"$(brightnessctl -d amdgpu_bl0 -m)" | tr -d '%')
ID=234
N=$(($PERC / 5 - 2))
for i in $(seq 1 $N); do
    BAR+="|"
done

notify-send "Brightness:$PERC% $BAR" -r $ID -c "Brightness"
